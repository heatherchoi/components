<form id="views-exposed-form-{{ name }}" class="views-exposed-form" action="{{ action }}" method="get" accept-charset="UTF-8">
  <div class="form-item form-item--textfield">
    <label for="edit-keywords-{{ name }}" class="form-item__label">Search this Section</label>
    <input type="text" id="edit-keywords-{{ name }}" name="keywords" value="{{ keys }}" size="30" maxlength="128" class="form-item__text" placeholder="{{ placeholder }}">
  </div>
  <div class="form-actions form-wrapper" id="edit-actions-{{ name }}">
    <input type="submit" id="edit-submit-{{ name }}" value="GO" class="form-actions__submit" data-drupal-selector="edit-submit">
  </div>
</form>
