      { 'content': teaser4 },
      { 'content': teaser5 },
      { 'content': teaser6 }
    ]
  } %}
{% endset %}

{# defining the pager for the view #}
{% set pager %}
  {% include '@components/pagers/pager--mini/pager--mini.twig' with {
    items: items
  } %}
{% endset %}

{# defining the content of the landing page template as a view, using view content from above #}
{% set listing_page_content %}
  {% include '@components/views/views-view/views-view.twig' with {
    'title': false,
    'pager': pager,
    'rows': rows
  } %}
{% endset %}

{# Begin Landing Page #}
{% embed '@layouts/page/page.twig' %}
   {% block header %}
    {% include '@layouts/regions/header/header.twig' %}
  {% endblock %}
  {% block breadcrumb %}
    {% include '@layouts/regions/breadcrumb/breadcrumb.twig' %}
  {% endblock %}
  {% block main %}
    {% include '@layouts/regions/highlighted/highlighted.twig' %}
    {% embed '@layouts/sidebar/sidebar.twig' with {
      'constrain': 'l-constrain'
    } %}
      {% block main %}
        {% include '@components/page-title/page-title.twig' with {
          'page_title': 'Listing Page'
        } %}
        {% include '@layouts/section/section.twig' with {
          'constrain': '',
          'content': listing_page_content
        } %}
      {% endblock %}
    {% endembed %}
  {% endblock %}
  {% block footer %}
    {% include '@layouts/regions/footer/footer.twig' %}
  {% endblock %}
{% endembed %}
